<p id="notice"><%= notice %></p>
<div id='p-container'>

  <div id='p-image'>
    <%= image_tag(@product.picture_url, :width => 600) if @product.picture.present? %>
  </div>

  <div id='p-name'>
    <h1><%= @product.name %></h1>
  </div>

  <div id='p-description'>
    <%= @product.description %>
  </div>

  <div id='p-code'>
    <b>Product Code:</b>
    <%= @product.code %>
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
