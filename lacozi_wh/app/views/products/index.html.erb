<h1>Listing products</h1>

<div id='new_product'>
  <%= link_to 'New Product', new_product_path %>
</div>

<table id='product_table'>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Description</th>
    <th>Code</th>
    <th>Catgr</th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= image_tag product.picture_url(:thumb) if product.picture? %></td>
    <td class='product_description'><%= product.description %></td>
    <td class='product_code'><%= product.code %></td>
    <td class='category_id'><%= product.category_id %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td class='destroy_product'><%= link_to 'X', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
